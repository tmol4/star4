{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noEmit": true,
    "moduleDetection": "force",
  },
}
