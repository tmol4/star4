{
  "name": "@star4/monorepo",
  "packageManager": "yarn@4.5.1",
  "workspaces": [
    "examples/*",
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    ":": "yarn workspace",
    "docs:dev": "turbo dev --filter=@star4/docs...",
    "docs:build": "turbo build --filter=@star4/docs",
    "docs:preview": "turbo preview --filter=@star4/docs",
    "examples:dev": "turbo dev --filter=\"./examples/*\"",
    "examples:build": "turbo build --filter=\"./examples/*\"",
    "examples:preview": "turbo preview --filter=\"./examples/*\"",
    "example:react:dev": "turbo dev --filter=@star4/example-react...",
    "example:react:build": "turbo build --filter=@star4/example-react",
    "example:react:preview": "yarn : @star4/example-react preview",
    "example:solid:dev": "turbo dev --filter=@star4/example-solid...",
    "example:solid:build": "turbo build --filter=@star4/example-solid",
    "example:solid:preview": "yarn : @star4/example-solid preview",
    "packages:dev": "turbo dev --filter=\"./packages/*\"",
    "packages:build": "turbo build --filter=\"./packages/*\"",
    "packages:publish": "changeset version && turbo publish && changeset tag"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@star4/config": "workspace:^",
    "turbo": "^2.2.3"
  }
}
